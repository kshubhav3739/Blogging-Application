@model Login
@{
Layout="~/Views/Shared/HomeLayout.cshtml";
ViewData["Title"] = "Login Page";
}

@section Navigation{
<li class="nav-item">
  <a class="nav-link waves-effect" asp-controller="Home" asp-action="Index">Home</a>
</li>
<li class="nav-item">
  <a class="nav-link waves-effect" asp-controller="Home" asp-action="Blogs">Blogs</a>
</li>
<li class="nav-item active">
  <a class="nav-link waves-effect" asp-controller="Home" asp-action="Login">Login</a>
</li>
<li class="nav-item">
  <a class="nav-link waves-effect" asp-controller="Home" asp-action="Register">Register</a>
</li>
}

<div class="row">
  <div class="col-3"></div>

  <div class="col-sm-6">
    <!-- Default form login -->
    <form class="text-center border border-light p-5" method="post" asp-action="Login" asp-controller="Home">
      <p class="h4 mb-4">Login</p>

      <!-- E-mail -->
      <input type="email" class="form-control mb-4" asp-for="email" placeholder="E-mail">
      <span asp-validation-for="email" class="text-danger"></span>

      <!-- Password -->
      <input type="password" class="form-control mb-4" asp-for="password" placeholder="Password">
      <span asp-validation-for="password" class="text-danger"></span>

      <div class="d-flex justify-content-around">
        <div>
          <!-- Remember me -->
          <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="check">
            <label class="custom-control-label" for="check">Remember me</label>
          </div>
        </div>
        <div>
          <!-- Forgot password -->
          <a asp-controller="Home" asp-action="ForgotPassword">Forgot password?</a>
        </div>
      </div>
      <!-- Sign in button -->
      <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>

      <hr>
      <!-- Register -->
      <p>Not a member?
        <a asp-controller="Home" asp-action="Register">Register</a>
      </p>
      @if(TempData["Message"] != null)
      {
      <div class='alert @TempData["Class"]'>
        @TempData["Message"]
      </div>
      }
    </form>
    <!-- Default form login -->
  </div>
  <!--/.Card : Dynamic content wrapper-->
  <div class="col-3"></div>
</div>